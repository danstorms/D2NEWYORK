<div class="after-wrapper">
  
	<div>
    <div id="main-nav">
      <ul>
        <li><%= link_to 'Wedding Photos', wedding_path, :'data-filter' => '*' %></li>
        <li><a class='vimeo' href="http://player.vimeo.com/video/64006101?byline=0&amp;portrait=0">Wedding Video!!!</a></li>
        <li><a class='vimeo' href="http://player.vimeo.com/video/64022777?byline=0&amp;portrait=0">Best Man Speech Video</a></li>
        <li class="selected"><%= link_to 'Honeymoon Photos', honeymoon_path, :'data-filter' => '*' %></li>
      </ul>
    </div>

  	<div id="spinner"><img src="/assets/images/loading.gif"></div>

    <div id="filters">
      <ul>
        <li><a href="#" data-filter=".canary">Canary Islands</a></li>
        <li><a href="#" data-filter=".sevilla">Sevilla</a></li>
        <li><a href="#" data-filter=".granada">Granada</a></li>
        <li><a href="#" data-filter=".morocco">Morocco</a></li>
      </ul>
    </div>
    
      <div id="container">
        <% (1..18).each do |i| %>
          <div class="box canary">
  			    <a class='gallery' href='https://s3.amazonaws.com/d2newyork/images/800/<%= i %>.jpg' title='Honeymoon - Canary Islands'><img src="https://s3.amazonaws.com/d2newyork/images/225/<%= i %>.jpg" /></a>
  			  </div>
  			<% end %>
        <% (19..37).each do |i| %>
          <div class="box sevilla">
  			    <a class='gallery' href='https://s3.amazonaws.com/d2newyork/images/800/<%= i %>.jpg' title='Honeymoon - Sevilla'><img src="https://s3.amazonaws.com/d2newyork/images/225/<%= i %>.jpg" /></a>
  			  </div>
  			<% end %>
        <% (40..67).each do |i| %>
          <div class="box granada">
  			    <a class='gallery' href='https://s3.amazonaws.com/d2newyork/images/800/<%= i %>.jpg' title='Honeymoon - Granada'><img src="https://s3.amazonaws.com/d2newyork/images/225/<%= i %>.jpg" /></a>
  			  </div>
  			<% end %>
        <% (68..105).each do |i| %>
          <div class="box morocco">
  			    <a class='gallery' href='https://s3.amazonaws.com/d2newyork/images/800/<%= i %>.jpg' title='Honeymoon - Morocco'><img src="https://s3.amazonaws.com/d2newyork/images/225/<%= i %>.jpg" /></a>
  			  </div>
  			<% end %>
  		</div>
	</div>

</div>

<script src="/javascripts/jquery-1.7.1.min.js"></script>
<script src="/javascripts/jquery.isotope.min.js"></script>
<script src="/javascripts/fake-element.js"></script>
<script src="/javascripts/jquery.colorbox-min.js"></script>
<script>
  var $container = $('#container');
  
  $container.imagesLoaded( function(){
    $('#spinner').fadeOut();
    $('#filters').fadeIn();
    $('#container').fadeIn();
    $container.isotope({
      // options
      itemSelector : '.box',
      layoutMode : 'masonry'
    });
  });
  
  // filter items when filter link is clicked
  $('#filters a').click(function(){
    var selector = $(this).attr('data-filter');
    $container.isotope({ filter: selector });
    return false;
  });
  
</script>
<script>
  $(document).ready(function(){
    $('#filters').hide();
    $('#container').hide();
	  $(".gallery").colorbox({rel:'gallery'});
	  $(".vimeo").colorbox({iframe:true, innerWidth:960, innerHeight:540});
  });
</script>
